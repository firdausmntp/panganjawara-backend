# ===========================================
# SUPABASE CONFIGURATION (Required for Vercel)
# ===========================================

# Supabase Project URL
SUPABASE_URL=https://your-project-id.supabase.co

# Supabase Anon/Public Key
SUPABASE_ANON_KEY=your-supabase-anon-key

# Supabase Database URL (PostgreSQL Connection String)
# Format: postgresql://postgres:[PASSWORD]@db.[PROJECT-ID].supabase.co:5432/postgres
DATABASE_URL=postgresql://postgres:your-password@db.your-project-id.supabase.co:5432/postgres

# Supabase Storage Bucket Name
SUPABASE_STORAGE_BUCKET=uploads

# ===========================================
# SERVER CONFIGURATION
# ===========================================

PORT=3000
NODE_ENV=production

# ===========================================
# JWT CONFIGURATION
# ===========================================

JWT_SECRET=your-super-secret-jwt-key-change-this
JWT_EXPIRES_IN=24h

# ===========================================
# UPLOAD CONFIGURATION
# ===========================================

UPLOAD_MAX_SIZE=5242880
UPLOAD_MAX_FILES=10

# ===========================================
# SUBDIRECTORY DEPLOYMENT (Optional)
# ===========================================

IS_SUBDIRECTORY_DEPLOYMENT=true
SUBDIRECTORY_NAME=pajar

# ===========================================
# EXTERNAL API KEYS (Optional)
# ===========================================

# Google Gemini API Key (fallback for NekoLabs AI)
GOOGLE_GEMINI_API_KEY=your-google-gemini-api-key

# ===========================================
# LEGACY MYSQL CONFIG (Only if not using Supabase)
# ===========================================

# DB_HOST=localhost
# DB_PORT=3306
# DB_USER=your_mysql_user
# DB_PASSWORD=your_mysql_password
# DB_NAME=your_mysql_database
